<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
   <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true </item>
        <!-- <item name="android:fitsSystemWindows">true</item> -->
        <!-- <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item> -->
        <!-- <item name="android:splitMotionEvents"> false</item> -->
    </style>
    
   <style name="ActionBarIconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
    </style>
    
   <!-- 底部菜单栏按钮style -->
    <style name="main_tab_bottom">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">10</item>
    </style>
    
    <style name="MainTabButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@color/transparent</item>
        <item name="android:background">@drawable/bg_main_tab_button</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_tab_button_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawablePadding">3dip</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    
    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/myratingbar</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
    </style>

</resources>
