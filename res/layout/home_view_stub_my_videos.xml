<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="110dp" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <FrameLayout
            android:id="@+id/fl_video_view"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            >

                <com.yqritc.scalablevideoview.ScalableVideoView
                    android:id="@+id/video_view"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="7dp"

                    android:layout_marginRight="10dp"
                    app:scalableType="fitXY"/>

                <ImageView
                    android:id="@+id/thumbnailImageView"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black"
                    />

                <ImageView
                    android:id="@+id/playImageView"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/video_play"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="10dp"
                    />

                <ProgressBar
                    style="@style/ProgressBarHorizontal"
                    android:layout_width="280dp"
                    android:layout_height="2dp"
                    android:id="@+id/progressBar"
                    android:max="100"
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_horizontal|top" />

        </FrameLayout>


        <TextView
            android:id="@+id/tv_content"
            android:layout_toRightOf="@+id/fl_video_view"
            android:text="今天好开心今天好开心今天好开心今天好开心今天好开心好开心!!!!!"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:textColor="#434343"
            android:gravity="top"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="7dp"
            android:ellipsize="end"
            android:lines="6"
            />
</RelativeLayout>
