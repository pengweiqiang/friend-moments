<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.anda.moments.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp" >
    </com.anda.moments.views.ActionBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7"
        android:paddingRight="12dp"
        android:paddingBottom="15dp"
        android:visibility="gone"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="定位中..."
            android:textColor="@color/tab_title_color" />

        <ImageView
            android:id="@+id/refresh_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/refresh_location" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f4f4"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/btn_classification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_selector"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/down1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:src="@drawable/fl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/down1"
                android:drawablePadding="5dp"
                android:text="分类"
                android:drawableRight="@drawable/jt_top"
                android:textColor="#737373" />
        </RelativeLayout>
        
        <View 
          	android:layout_width="1px"
          	android:layout_height="match_parent"
          	android:layout_marginTop="4dp"
          	android:layout_marginBottom="4dp"
          	android:background="#c5c5c5"  
            />

        <RelativeLayout
            android:id="@+id/btn_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/down2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:src="@drawable/jl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/down2"
                android:drawablePadding="5dp"
                android:text="距离"
                android:drawableRight="@drawable/jt_top"
                android:textColor="#737373" />
        </RelativeLayout>
        
        <View 
          	android:layout_width="1px"
          	android:layout_height="match_parent"
          	android:layout_marginTop="4dp"
          	android:layout_marginBottom="4dp"
          	android:background="#c5c5c5"  
            />

        <RelativeLayout
            android:id="@+id/btn_capacity_sort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >
	            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/down3"
                android:drawablePadding="5dp"
                android:text="智能排序"
                android:drawableRight="@drawable/jt_top"
                android:textColor="#737373" />

            <ImageView
                android:id="@+id/down3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/px" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_line" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.anda.moments.views.XListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/grey_line"
            android:dividerHeight="1dp" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>