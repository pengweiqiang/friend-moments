<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
        >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          >
        <RelativeLayout
            android:id="@+id/view_record"
            android:layout_toLeftOf="@+id/tv_audio_second"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/audio_background"
            >
            <View
                android:id="@+id/voice_anim"
                android:layout_width="25dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"
                android:background="@drawable/icon_voice_anim_3"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_audio_second"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:paddingTop="20dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:textColor="#979797"
            android:layout_marginRight="15dp"
            android:text="0''"
            />


        <TextView
            android:id="@+id/tv_content"
            android:layout_below="@+id/view_record"
            android:text="今天好开心今天好开心今天好开心今天好天好开心今天好开心今天好天好开心今天好开心今天好开心今天好开心好开心!!!!!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#434343"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="7dp"
            android:ellipsize="end"
            android:lines="2"
            />
      </RelativeLayout>


</RelativeLayout>