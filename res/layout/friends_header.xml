<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb"
        android:paddingBottom="6dp"
        >

        <EditText
            android:id="@+id/et_search_friend"

            android:background="@drawable/bg_search_friends"
            android:padding="10dp"
            android:hint="搜索"
            android:gravity="center"
            android:textColorHint="#979797"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"
        />
    <RelativeLayout
        android:id="@+id/rl_new_friend_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/btn_selector"
        >
        <ImageView
            android:id="@+id/iv_add_friends"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/add_friends"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_new_friend_title"
            android:layout_toRightOf="@+id/iv_add_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新好友请求"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="#434343"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/unread_address_number"
            android:layout_toRightOf="@+id/tv_new_friend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/unread_message_drawable"
            android:gravity="center"
            android:text=""
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_detail_right"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"
        />

    <RelativeLayout
        android:id="@+id/rl_friend_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/btn_selector"
        >
        <ImageView
            android:id="@+id/iv_add_friends"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/friends_message"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_message_title"
            android:layout_toRightOf="@+id/iv_add_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友消息"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="#434343"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/unread_msg_count"
            android:layout_toRightOf="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/unread_message_drawable"
            android:gravity="center"
            android:text=""
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_detail_right"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"
        />

</LinearLayout>
