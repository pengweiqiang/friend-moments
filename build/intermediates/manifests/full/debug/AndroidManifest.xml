            android:label="发布语音"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anda.moments.ui.publish.PublishVideoActivity"
            android:label="录制视频"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anda.moments.ui.publish.PublishVideoSecondActivity"
            android:label="发布视频"
            android:screenOrientation="portrait" />
        <!-- <activity android:name=".ui.publish.PlayVideoActiviy" -->
        <!-- android:label="播放视频" -->
        <!-- android:screenOrientation="portrait" -->
        <!-- /> -->

        <activity
            android:name="com.anda.moments.ui.UserInfoActivity"
            android:label="详细资料"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.anda.moments.ui.UpdateInfoActivity"
            android:label="修改资料"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name="com.anda.moments.ui.PersonalInfoActivity"
            android:label="个人中心"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anda.moments.ui.UserHomeActivity"
            android:label="用户主页"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anda.moments.ui.SettingActivity"
            android:label="设置"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anda.moments.ui.AddFriendsActivity"
            android:label="添加好友"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anda.moments.ui.NewFriendsListActivity"
            android:label="新好友请求"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.anda.moments.ui.ConversationActivity"
            android:label="单聊会话"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.anda.moments"
                    android:pathPrefix="/conversation/"
                    android:scheme="rong" />
            </intent-filter>
        </activity>

        <!-- 会话列表 Activity -->
        <activity
            android:name="com.anda.moments.ui.ConversationListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.anda.moments"
                    android:pathPrefix="/conversationlist"
                    android:scheme="rong" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.anda.moments.ui.MainActivity"
            android:label="主页面"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <!-- umeng update  start -->
        <service
            android:name="com.umeng.update.net.DownloadingService"
            android:process=":DownloadingService" >
        </service>

        <activity
