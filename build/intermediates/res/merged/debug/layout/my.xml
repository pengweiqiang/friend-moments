<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_my"
    android:orientation="vertical" >

    <com.anda.moments.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
         >
    </com.anda.moments.views.ActionBar>

    <com.anda.moments.views.SpringScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/me_pic" />

        <RelativeLayout
            android:id="@+id/buy_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/head" >

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13501235683"
                android:textSize="17sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/member_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:visibility="gone"
                android:layout_toRightOf="@+id/phone"
                android:text="普通会员"
                android:textColor="@color/text_color_my" />

            <TextView
                android:id="@+id/member_level_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:paddingTop="3dp"
                android:text="个人等级:白银"
                android:textColor="@color/text_color_my" />

            <TextView
                android:id="@+id/kuihuazi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_level_desc"
                android:paddingTop="5dp"
                android:text="葵花籽:15粒"
                android:textColor="#feaf82" />
            
            <RelativeLayout 
                android:layout_below="@+id/member_level_desc"
                android:layout_toRightOf="@+id/kuihuazi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:paddingTop="3dp"
                android:visibility="gone"
                android:layout_marginTop="3dp"
                >
            
            <ImageView 
                android:id="@+id/kuihuazi_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_kuihuazi"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/kuihuazi_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/kuihuazi_logo"
                android:gravity="center_vertical"
                android:text="葵花籽的作用?"
                android:textColor="@color/white" />
            <View 
                android:layout_width="81dp"
                android:layout_below="@+id/kuihuazi_info"
                android:layout_toRightOf="@+id/kuihuazi_logo"
                android:layout_height="2dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/dash"
                />
            </RelativeLayout>
            
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/btn_right" />
            
        </RelativeLayout>
    </RelativeLayout>

    

            <RelativeLayout
